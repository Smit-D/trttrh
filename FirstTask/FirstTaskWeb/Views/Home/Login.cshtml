@model LoginVM
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input title="Enter Email" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input title="Enter Password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="d-flex my-3">
                <div class="form-group me-2">
                    <input type="submit" value="Login" class="btn btn-success" />
                </div>
                <div class="form-group">
                    <input type="reset" value="Reset" class="btn btn-primary" />
                </div>
            </div>
        </form>
        <p>New to FirstTask Registered Now? <a style="text-decoration:none;" asp-controller="Home" asp-action="Register">Register</a></p>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
